---
import {type CollectionEntry, getEntryBySlug} from "astro:content";
import { Image } from "astro:assets";

type Props = {
    post: CollectionEntry<"posts">; //this is one propoerty of the  type posts
}

const {post} = Astro.props;
const author = await getEntryBySlug("authors", post.data.author);
---

<article>
    <a
        href={`/blog/${post.slug}`}
        aria-label={`Read more about ${post.data.title}`}
    >
        <img
            src={post.data.image}
            alt={post.data.title}
            width={600}
            height={600 / 1.5}
            class="rounded-2xl shadow-xl mb-6 aspect-thumbnail object-cover"
        />
    </a>

    <a
        href={`/blog/${post.slug}`}
        class="text-4xl text-zinc-900 mb-4 font-semibold inline-block"
    >
        {post.data.title}
    </a>

    <p class="text-zinc-500 text-2xl mb-9 line-clamp-2">
        {post.body}
    </p>
</article>